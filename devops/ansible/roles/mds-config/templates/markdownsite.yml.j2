---
database:
  markdownsite: postgresql://{{ database.markdownsite.user }}:{{ database.markdownsite.pass }}@{{ database.markdownsite.host }}/markdownsite
  minion: postgresql://{{ database.minion.user }}:{{ database.minion.pass }}@{{ database.minion.host }}/minion
domain: {{ domain.system }}
hosted_domain: {{ domain.hosted }}

secrets:
{% for secret in secrets %}
  - {{ secret }}
{% endfor %}

smtp:
  host: {{ smtp.host }} 
  port: {{ smtp.port }}
  sasl_username: {{ smtp.sasl_username }}
  sasl_password: {{ smtp.sasl_password }}
mkit_path: {{ mkit_path }}
