server {
    server_name www.{{ config.panel.domain }} {{ config.panel.domain }};
    listen 443 ssl;
    
    # SSL Options
    ssl_certificate /etc/letsencrypt/live/{{ config.panel.domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ config.panel.domain }}/privkey.pem;

    ssl_session_cache shared:le_nginx_SSL:10m;
    ssl_session_timeout 1440m;
    ssl_session_tickets off;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;

    ssl_ciphers "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384";

    ssl_dhparam /etc/nginx/ssl-dhparams.pem;
    
    root        /var/www/{{ config.panel.domain }};
    
    if ($host = www.{{ config.panel.domain }}) {
        return 301 https://{{ config.panel.domain }}$request_uri;
    }

    location / {
    
    }

}

server {
    listen 80;
    server_name www.{{ config.panel.domain }} {{ config.panel.domain }};
    return 301 https://$host$request_uri;
}

